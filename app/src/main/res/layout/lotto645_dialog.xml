<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:text="당신의 행운의 번호를 입력하세요."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/dialog645ball1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/lotto_ball"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/dialog645ball2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/lotto_ball2"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/dialog645ball3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/lotto_ball3"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/dialog645ball4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/lotto_ball4"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/dialog645ball5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/lotto_ball5"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/dialog645ball6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/lotto_ball6"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button645_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@color/zxing_custom_result_view"
        android:text="추가"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button645_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@color/zxing_custom_result_view"
        android:text="취소"
        android:textColor="#fff" />
</LinearLayout>